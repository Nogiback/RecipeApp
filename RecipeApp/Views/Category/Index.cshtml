@model List<CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Ingredient Categories</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Category
        </a>
    </div>

    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(category.IconUrl))
                    {
                        <img src="@category.IconUrl" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span style="font-size: 4rem;">@category.Name.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <span class="badge bg-info">@category.IngredientCount Ingredients</span>
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No categories found. <a asp-action="Create">Create one now</a>
        </div>
    }
</div>