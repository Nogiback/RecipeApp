@model IngredientViewModel

@{
    ViewData["Title"] = "Ingredient Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" />
                    }
                    else
                    {
                        <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center" style="height: 250px;">
                            <span style="font-size: 4rem;">@Model.Name.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.CategoryName</dd>

                        <dt class="col-sm-4">Default Unit</dt>
                        <dd class="col-sm-8">@Model.DefaultUnit</dd>

                        <dt class="col-sm-4">Used In Recipes</dt>
                        <dd class="col-sm-8"><span class="badge bg-info fs-6">@Model.RecipeCount</span></dd>

                        <dt class="col-sm-4">Pantry Count</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary fs-6">@Model.PantryItemCount</span></dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
