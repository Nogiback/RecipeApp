@model IEnumerable<PantryItem>

@{
    ViewData["Title"] = "My Pantry";
}

<h4 class="text-center">My Pantry Storage</h4>

@if (ViewBag.msg != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.msg
    </div>
}

<div class="text-end m-4">
    <a asp-action="Create" asp-route-userId="@ViewBag.CurrentUserId" class="btn btn-outline-secondary">
        Add Item
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Category</th>
            <th>Ingredient</th>
            <th>Quantity</th>
            <th>Added Date</th>
            <th>Expiry Date</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody class="align-middle text-start">
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center py-4 text-muted">
                    Your pantry is currently empty. Add some items!
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                // Keeps your logic to highlight rows if the item is expired!
                var isExpired = item.ExpiryDate != null && item.ExpiryDate < DateTime.Now;

                <tr class="@(isExpired ? "table-danger" : "")">
                    <td class="fs-5">@item.Ingredient?.Category?.Name</td>
                    <td class="fs-5">
                        @item.Ingredient?.Name
                    </td>

                    <td class="fs-5">@item.Quantity @item.Ingredient.DefaultUnit</td>

                    <td class="text-muted">@item.AddedDate.ToShortDateString()</td>

                    <td class="fs-5">
                        @(item.ExpiryDate != null ? item.ExpiryDate.ToShortDateString() : "No Expiry")

                        @if (isExpired)
                        {
                            <span class="badge bg-danger ms-2">Expired</span>
                        }
                    </td>

                    <td class="align-middle" style="width: 150px;">
                        <div class="d-flex flex-column gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" asp-route-userid="@item.AppUserId" class="btn btn-outline-secondary">
                                Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" asp-route-userid="@item.AppUserId" class="btn btn-outline-warning">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" asp-route-userid="@item.AppUserId" class="btn btn-outline-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="AppUser" asp-action="Index" class="btn btn-outline-dark">
        Back to User List
    </a>
</div>