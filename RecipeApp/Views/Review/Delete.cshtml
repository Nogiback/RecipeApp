@model Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Review</h2>
    <h4>Are you sure you want to delete this?</h4>
    <hr />

    <div class="card shadow-sm border-danger mb-4">
        <div class="card-body">
            <h5 class="card-title text-warning">
                @for (int i = 0; i < Model.Rating; i++)
                {
                    <span>★</span>
                }
                @for (int i = Model.Rating; i < 5; i++)
                {
                    <span class="text-muted">☆</span>
                }
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">Posted on @Model.DatePosted.ToShortDateString()</h6>
            <p class="card-text mt-3">"@Model.Comment"</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="RecipeId" />

        <input type="submit" value="Yes, Delete Review" class="btn btn-danger" />
        <a asp-action="Index" asp-route-recipeId="@Model.RecipeId" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>