@model ReviewDetailsViewModel

@{
    ViewData["Title"] = "Review Details";
}


<h4>Review Details</h4>

<div class="d-flex justify-content-center">
    <div class="card mb-3 p-4 shadow-sm rounded h-auto" style="width: 60%">

        <div class="card-body text-center">
            <h3 class="card-title mb-2">@Model.RecipeTitle</h3>

            <div class="text-warning fs-3 mb-3">
                @for (int i = 0; i < Model.Rating; i++)
                {
                    <span>★</span>
                }
                @for (int i = Model.Rating; i < 5; i++)
                {
                    <span class="text-muted">☆</span>
                }
            </div>

            <hr class="w-50 mx-auto text-muted" />

            <div class="text-start mt-4 mx-auto" style="max-width: 80%;">
                <p class="card-text fs-5 mb-1">
                    <strong>Reviewed By:</strong> @Model.ReviewerName
                </p>
                <p class="card-text fs-5 mb-4 text-muted">
                    <strong>Date Posted:</strong> @Model.DatePosted.ToShortDateString()
                </p>

                <div class="p-4 bg-light rounded fst-italic fs-5 text-center shadow-sm border">
                    "@Model.Comment"
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                Edit
            </a>

            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger px-4 ms-2">
                Delete
            </a>

            <button type="button" onclick="history.back()" class="btn btn-outline-secondary px-4 ms-2">
                Back
            </button>
        </div>

    </div>
</div>