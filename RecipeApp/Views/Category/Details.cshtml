@model CategoryViewModel

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>@Model.Name</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.IconUrl))
                    {
                        <img src="@Model.IconUrl" class="img-fluid rounded" alt="@Model.Name">
                    }
                    else
                    {
                        <div class="bg-secondary text-white rounded d-flex align-items-center justify-content-center" style="height: 250px;">
                            <span style="font-size: 6rem;">@Model.Name.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Total Ingredients</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info fs-6">@Model.IngredientCount</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>