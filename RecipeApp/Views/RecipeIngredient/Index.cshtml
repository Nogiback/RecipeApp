@model IEnumerable<RecipeIngredient>

@{
    ViewData["Title"] = "Recipe Ingredients";
}

<h3 class="text-center">Ingredients for @ViewBag.RecipeTitle</h3>

@if (ViewBag.msg != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.msg
    </div>
}

<div class="text-end m-4">
    <a asp-action="Create" asp-route-recipeId="@ViewBag.RecipeId" class="btn btn-outline-secondary">
        Add New Ingredient
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Category</th>
            <th>Ingredient</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Measurement</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody class="align-middle text-start">
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center py-4 text-muted">No ingredients added yet.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fs-5">@item.Ingredient?.Category?.Name</td>
                    <td class="fs-5">@item.Ingredient?.Name</td>

                    <td>
                        <div class="bg-light text-secondary d-flex align-items-center justify-content-center rounded"
                             style="width: 150px; height: 150px; font-size: 4rem; font-weight: bold; border: 1px solid #dee2e6;">
                            @(string.IsNullOrEmpty(item.Ingredient?.Name) ? "?" : item.Ingredient.Name.Substring(0, 1).ToUpper())
                        </div>
                    </td>

                    <td class="fs-5">@item.Quantity</td>

                    <td class="fs-5">
                        @(string.IsNullOrEmpty(item.UnitDisplay) ? item.Ingredient?.DefaultUnit : item.UnitDisplay)
                    </td>

                    <td class="align-middle" style="width: 150px;">
                        <div class="d-flex flex-column gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@ViewBag.RecipeId" class="btn btn-outline-dark">
        Back to Recipe
    </a>
</div>