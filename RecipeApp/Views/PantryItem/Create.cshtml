@model CreatePantryItemViewModel

@{
    ViewData["Title"] = "Add to Pantry";
}

<div class="container mt-4">
    <h2>Add Item to Pantry</h2>
    <hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <input type="hidden" asp-for="UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="ExistingIngredientId" class="control-label"></label>

                <select asp-for="ExistingIngredientId" asp-items="Model.IngredientOptions" class="form-select">
                    <option value="">-- Choose an Ingredient --</option>
                </select>

                <span asp-validation-for="ExistingIngredientId" class="text-danger"></span>
            </div>
             <div class="form-group" mb-3>
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExpiryDate" class="control-label"></label>
                <input asp-for="ExpiryDate" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
