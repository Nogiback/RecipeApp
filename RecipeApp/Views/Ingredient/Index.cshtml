@model List<IngredientViewModel>

@{
    ViewData["Title"] = "Ingredients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Ingredients</h2>
        <a asp-action="Create" class="btn btn-primary">Add New Ingredient</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Default Unit</th>
                    <th>Used In Recipes</th>
                    <th>Pantry Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ingredient in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(ingredient.ImageUrl))
                            {
                                <img src="@ingredient.ImageUrl" alt="@ingredient.Name"
                                     class="rounded me-2" style="width: 30px; height: 30px; object-fit: cover;" />
                            }
                            @ingredient.Name
                        </td>
                        <td>@ingredient.CategoryName</td>
                        <td>@ingredient.DefaultUnit</td>
                        <td><span class="badge bg-info">@ingredient.RecipeCount</span></td>
                        <td><span class="badge bg-secondary">@ingredient.PantryItemCount</span></td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@ingredient.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@ingredient.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@ingredient.Id" class="btn btn-sm btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No ingredients found. <a asp-action="Create">Create one now</a>
        </div>
    }
</div>
