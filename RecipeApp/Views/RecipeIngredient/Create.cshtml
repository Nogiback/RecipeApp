@model CreateRecipeIngredientViewModel

@{
    ViewData["Title"] = "Add Recipe Ingredient";
}

<h4 class="text-center">Add Recipe Ingredient</h4>

@if (ViewBag.msg != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.msg
    </div>
}

<div class="d-flex justify-content-center">
    <div class="card mb-3 p-3 shadow-sm rounded h-auto" style="width: 60%">
        <form asp-action="Create" method="post" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RecipeId" />

            <div class="mb-3">
                <label asp-for="SelectedIngredientId" class="form-label fw-bold"></label>
                <select asp-for="SelectedIngredientId" asp-items="Model.IngredientOptions" class="form-select">
                    <option value="">-- Select an Ingredient --</option>
                </select>
                <span asp-validation-for="SelectedIngredientId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label fw-bold"></label>
                <input asp-for="Quantity" class="form-control" placeholder="e.g., 2.5" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UnitDisplay" class="form-label fw-bold"></label>
                <input asp-for="UnitDisplay" class="form-control" placeholder="e.g., cups, pinches (leave blank for default)" />
                <span asp-validation-for="UnitDisplay" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-outline-secondary">Add to Recipe</button>

                <a asp-action="Index" asp-route-recipeId="@Model.RecipeId" class="btn btn-outline-secondary ms-2">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}