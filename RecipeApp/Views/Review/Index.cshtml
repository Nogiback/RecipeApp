@model IEnumerable<Review>

@{
    ViewData["Title"] = "Reviews";
}

<h4>
    Reviews for @ViewBag.RecipeTitle
</h4>
@if (ViewBag.msg != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.msg
    </div>
}

<div class="text-end m-4">
    <a asp-action="Create" asp-route-recipeId="@ViewBag.RecipeId" class="btn btn-outline-secondary">
        Write a Review
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-light">
        <tr>
            <th>User</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody class="align-middle text-start">
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center py-4 text-muted">
                    There are no reviews for this recipe yet. Be the first!
                </td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold fs-5">@item.AppUser?.UserName</td>

                    <td class="text-warning fs-5">
                        @for (int i = 0; i < item.Rating; i++)
                        {
                            <span>★</span>
                        }
                        @for (int i = item.Rating; i < 5; i++)
                        {
                            <span class="text-muted">☆</span>
                        }
                    </td>

                    <td class="fst-italic">"@item.Comment"</td>

                    <td class="text-muted">@item.DatePosted.ToShortDateString()</td>

                    <td class="align-middle" style="width: 150px;">
                        <div class="d-flex flex-column gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                Details
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                Edit
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="Recipe" asp-action="Details" asp-route-id="@ViewBag.RecipeId" class="btn btn-outline-dark">
        Back to Recipe
    </a>
</div>