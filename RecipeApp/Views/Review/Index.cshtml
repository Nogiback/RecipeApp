@model IEnumerable<Review>

@{
    ViewData["Title"] = "Reviews";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Reviews for @ViewBag.RecipeTitle</h2>

        <a asp-action="Create" asp-route-recipeId="@ViewBag.RecipeId" class="btn btn-primary">
            Write a Review
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">There are no reviews for this recipe yet. Be the first!</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-12 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title text-warning">
                                    @for (int i = 0; i < item.Rating; i++)
                                    {
                                        <span>★</span>
                                    }
                                    @for (int i = item.Rating; i < 5; i++)
                                    {
                                        <span class="text-muted">☆</span>
                                    }
                                </h5>
                                <small class="text-muted">@item.DatePosted.ToShortDateString()</small>
                                <small class="text-muted">by @item.AppUser?.UserName</small>
                            </div>

                            <p class="card-text mt-2">"@item.Comment"</p>

                            <div class="mt-3">
								<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Recipe" asp-action="Details" asp-route-id="@ViewBag.RecipeId" class="btn btn-outline-dark">Back to Recipe</a>
    </div>
</div>