@model CreateReviewViewModel
@{
    ViewData["Title"] = "Write a Review";
}


<h4>Write a Review for @Model.RecipeTitle </h4>

@if (ViewBag.msg != null)
{
    <div class="alert alert-info" role="alert">
        @ViewBag.msg
    </div>
}

<div class="d-flex justify-content-center">
    <div class="card mb-3 p-3 shadow-sm rounded h-auto" style="width: 60%">
        <form asp-action="Create" class="mt-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="RecipeId" />
            <input type="hidden" asp-for="RecipeTitle" />

            <div class="mb-3">
                <label asp-for="Rating" class="form-label fw-bold">Rating (1 to 5 Stars)</label>
                <select asp-for="Rating" class="form-select">
                    <option value="">-- Select a Rating --</option>
                    <option value="5">5 - Excellent</option>
                    <option value="4">4 - Good</option>
                    <option value="3">3 - Average</option>
                    <option value="2">2 - It's not my favourite</option>
                    <option value="1">1 - It's interesting</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SelectedAppUserId" class="form-label fw-bold">Reviewer</label>
                <select asp-for="SelectedAppUserId" class="form-select"
                        asp-items="@(new SelectList(Model.Users, "Id", "UserName"))">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="SelectedAppUserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label fw-bold">Your Comment</label>
                <textarea asp-for="Comment" class="form-control" rows="4"
                          placeholder="What did you think of this recipe?"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-outline-secondary">Post Review</button>
                <a asp-action="Index" asp-route-recipeId="@Model.RecipeId"
                   class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}